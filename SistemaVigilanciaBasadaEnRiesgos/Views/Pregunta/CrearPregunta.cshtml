

@{
    ViewBag.Title = "CrearSubtitulos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Inicio</a></li>
        <li class="breadcrumb-item active" aria-current="page">Preguntas</li>
    </ol>
</nav>


<div class="row">
    <div class="col-sm-12">
        <div class="card border-info">
            <div class="card-header bg-info text-white">
                Subtítulo Prueba
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4">
                        <label for="ddlListas">Seleccionar Lista de Verificación:</label>
                        <select id="ddlListas" class="form-control form-control-sm">
                            <option value="">-- Seleccione una lista --</option>
                        </select>
                    </div>
                    <div class="col-sm-4">
                        <label for="ddlSubtitulos">Seleccionar Subtítulo:</label>
                        <select id="ddlSubtitulos" class="form-control form-control-sm">
                            <option value="">-- Seleccione un subtítulo --</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4">
                        <button id="btnNuevo" type="button" class="btn btn-sm btn-success" onclick="abrirPopUpForm(null)"> <img src="~/Content/imganes/new.png" style="width:22px" /> Agregar Nuevo</button>
                    </div>
                </div>
                <hr />
                <div class="row mt-3">
                    <div class="col-sm-12">
                        <table id="tbdata" class="table table-striped table-bordered " style="width:100%">
                            <thead>
                                <tr>
                                    <th>Referencia</th>
                                    <th>Descripcion</th>
                                    <th>ESTADO</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="exampleModalLabel">Preguntas </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form">
                    <input id="txtid" class="model" value="0" type="hidden" />
                    <div class="form-group">
                        <label for="txtSubtituloID" class="col-form-label" hidden="hidden">Subtitulo: <span class="error"></span></label>
                        <input type="text" class="form-control form-control-sm model text-uppercase required" id="txtSubtituloID" name="ListaNombre" hidden="hidden">
                    </div>
                    <div class="form-group">
                        <label for="txtDescripcion" class="col-form-label">Descripcion: <span class="error"></span></label>
                        <input type="text" class="form-control form-control-sm model text-uppercase required" id="txtDescripcion" name="ListaID">
                    </div>
                    <div class="form-group">
                        <label for="txtReferencia" class="col-form-label">Referencia: <span class="error"></span></label>
                        <input type="text" class="form-control form-control-sm model text-uppercase required" id="txtReferencia" name="Nombre">
                    </div>
                    <div class="form-group">
                        <label for="txtEstadisticas" class="col-form-label">Estadisticas: <span class="error"></span></label>
                        <input type="text" class="form-control form-control-sm model text-uppercase required" id="txtEstadisticas" name="Descripcion">
                    </div>
                    <div class="form-group">
                        <label for="cboEstado" class="col-form-label">Estado: <span class="error"></span></label>
                        <input type="text" class="form-control form-control-sm model text-uppercase required" id="cboEstado" name="Descripcion">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Cerrar</button>
                <button id="btnGuardar" type="button" class="btn btn-sm btn-primary" onclick="Guardar()">Guardar</button>

            </div>
        </div>
    </div>
</div>

<!-- Referencia al archivo JavaScript -->
@section scripts{
    <script src="@Url.Content("~/Scripts/Views/Pregunta_Crear.js")" type="text/javascript"></script>
}