@model CapaModeloRBS.tbOrganizacion

@{
    ViewBag.Title = "Gestión de Organizaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb -->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Inicio</a></li>
        <li class="breadcrumb-item active" aria-current="page">Organizaciones</li>
    </ol>
</nav>

<div class="row">
    <div class="col-sm-12">
        <div class="card border-info">
            <div class="card-header bg-info text-white">
                Organizaciones
            </div>

            <!-- Botón de nuevo -->
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-auto">
                        <button id="btnNuevo" type="button" class="btn btn-sm btn-success">
                            <img src="~/Content/imganes/new.png" style="width:22px" /> Agregar Nueva Organización
                        </button>
                    </div>
                </div>

                <!-- Tabla -->
                <div class="row mt-3">
                    <div class="col-sm-12">
                        <table id="tablaVisualizacion" class="table table-striped table-bordered table-sm" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Dirección</th>
                                    <th>Correo</th>
                                    <th>Teléfono</th>
                                    <th style="width: 90px;">Acciones</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal: Crear -->
<div class="modal fade" id="formNuevoRegistro" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">Nueva Organización</h5>
                <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
            </div>
            <div class="modal-body">
                <form id="formNuevo" enctype="multipart/form-data">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label>Nombre</label>
                            <input type="text" class="form-control" id="nuevoNombre" required />
                            <div class="invalid-feedback">Este campo es obligatorio.</div>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Correo</label>
                            <input type="email" class="form-control" id="nuevoCorreo" />
                            <div class="invalid-feedback">Ingrese un correo válido.</div>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Dirección</label>
                            <input type="text" class="form-control" id="nuevoDireccion" required />
                            <div class="invalid-feedback">Este campo es obligatorio.</div>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Teléfono</label>
                            <input type="text" class="form-control" id="nuevoTelefono" />
                            <div class="invalid-feedback">Solo se permiten números.</div>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Gerente Responsable</label>
                            <input type="text" class="form-control" id="nuevoGerente" required />
                            <div class="invalid-feedback">Este campo es obligatorio.</div>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Certificado OMA</label>
                            <input type="text" class="form-control" id="nuevoOMA" required />
                            <div class="invalid-feedback">Este campo es obligatorio.</div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cancelar</button>
                <button id="btnGuardarNuevo" type="button" class="btn btn-primary btn-sm">Guardar</button>
            </div>
        </div>
    </div>
</div>


<!-- Modal: Editar -->
<div class="modal fade" id="formEditarRegistro" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-lightblue text-dark">
                <h5 class="modal-title">Editar Organización</h5>
                <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
            </div>
            <div class="modal-body">
                <form id="formEditar" enctype="multipart/form-data">
                    <input type="hidden" id="editarID" />
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label>Nombre</label>
                            <input type="text" class="form-control" id="editarNombre" required />
                            <div class="invalid-feedback">Este campo es obligatorio.</div>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Correo</label>
                            <input type="email" class="form-control" id="editarCorreo" />
                            <div class="invalid-feedback">Ingrese un correo válido.</div>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Dirección</label>
                            <input type="text" class="form-control" id="editarDireccion" required />
                            <div class="invalid-feedback">Este campo es obligatorio.</div>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Teléfono</label>
                            <input type="text" class="form-control" id="editarTelefono" />
                            <div class="invalid-feedback">Solo se permiten números.</div>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Gerente Responsable</label>
                            <input type="text" class="form-control" id="editarGerente" required />
                            <div class="invalid-feedback">Este campo es obligatorio.</div>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Certificado OMA</label>
                            <input type="text" class="form-control" id="editarOMA" required />
                            <div class="invalid-feedback">Este campo es obligatorio.</div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cancelar</button>
                <button id="btnGuardarEditar" type="button" class="btn btn-primary btn-sm">Guardar Cambios</button>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script src="@Url.Content("~/Scripts/Views/Organizacion_Crear.js")" type="text/javascript"></script>
}
